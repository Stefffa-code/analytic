{
  "compileOnSave": false,
  "compilerOptions": {
    "watch": true,
    "sourceMap": true,
    "alwaysStrict": true,
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "rootDir": ".",
    "noUnusedLocals":  false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "lib": [ "esnext" ]
  },
  "include": [  "server/**/*.ts" ],
  "exclude": [  "node_modules",  ".vscode", "client" ],

  "watchOptions": {
    "watchFile": "priorityPollingInterval",
    "watchDirectory": "dynamicPriorityPolling"

  }
}
